<div class='container m-5'>
<div class='d-flex col-12 container justify-content-center m-3'>
  <h1><%= @list.name %> Show Page</h1>
  </div>
<div class='d-flex col-12 container justify-content-center m-3'>
<% @list.bookmarks.each do |bookmark|%>
  <div class="d-flex row card m-3 g-3" style="width: 20rem;">
    <img src=<%= bookmark.movie.poster_url %> class="card-img-top" alt="...">
    <div class="card-body">
    <h5 class="card-title"><%= link_to bookmark.movie.title, list_path %></h5>
    <p class="card-text"><%= bookmark.movie.overview %></p>
    <%= link_to "Delete from list",
    bookmark_path(bookmark),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>

  </div>
</div>
<% end %>
</div>
<div class='d-flex col-12 container justify-content-evenly m-3'>
<%= link_to "Add a movie", new_list_bookmark_path(@list) %>

<%= link_to "Back to list of Genres", lists_path %>
</div>
</div>
