<div class='container'>
<h1><%= @list.name %> Show Page</h1>
    <ul>
    <% @list.bookmarks.each do |bookmark|%>
      <h2><%= link_to bookmark.movie.title, list_path %></h2>
      <p><%= bookmark.movie.overview %></p>
      <p><%= bookmark.movie.poster_url %></p>
      <p><%= bookmark.comment %></p>
      <%= link_to "Delete from list",
        bookmark_path(bookmark), 
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
      %>
    <% end %>
  </ul>
<%= link_to "Add a movie", new_list_bookmark_path(@list) %>

<%= link_to "Back to list of Genres", lists_path %>
</div>
